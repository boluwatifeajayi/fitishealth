<%- include('partials/layout.ejs') %>


<title>Add New Post | Bluenovate</title>
<div class="container">
    <script src="https://cdn.ckeditor.com/ckeditor5/21.0.0/classic/ckeditor.js"></script>
    <script charset="utf-8" src="//cdn.iframe.ly/embed.js?api_key={API KEY}"></script>
    <h1 class="mb-4 mt-4">Add Post</h1>
    <form action="/articles/add" method="post">
        <div class="form-group">
            <label for="title">Title Of The Post</label>
            <input type="text" class="form-control" name="title" required>
        </div>
        <div class="form-group">
            <label for="title">Author(your name)</label>
            <input type="text" class="form-control" name="writer" required>
        </div>
        <div class="form-group">
            <label for="title">Current Date</label>
            <input type="date" class="form-control" name="postDate" required>
        </div>

        <div class="form-group">
            <label for="description">Brief Summary Of The Post</label>
            <textarea type="text" class="form-control" name="description" required></textarea>
        </div>

        <div class="form-group">
            <label for="description">Valid Image Url</label>
            <input type="url" class="form-control" name="image" required>
        </div>
        <div class="form-group">
            <label for="description">Post Category</label>
            <select class="form-control" name="category">
                <option value="Uncategoriezed">Uncategoriezed</option>
                <option>Life Style</option>
                <option>Life Hacks</option>
                <option>Health And Beauty</option>
                <option>Food And Dishes</option>
                <option>Technology And Web Development</option>
                <option>Gaming And Fiction</option>
                <option>Entertainment</option>
                <option>Uncategoriezed</option>
            </select>
        </div>

        <div class="form-group">
            <label for="body">Body Of Post</label>
            <textarea class="form-control" name="body" id="editor"></textarea>
        </div>
        <hr>
        <h4>Recommended Read Posts (Optional)</h4>
        <div class="form-group">
            <label for="description">Recommended One Title (Optional)</label>
            <input type="text" class="form-control" name="nextTitleOne">
        </div>
        <div class="form-group">
            <label for="description">Recommended One Link (Optional)</label>
            <input type="url" class="form-control" name="nextLinkOne">
        </div>
        <div class="form-group">
            <label for="description">Recommended Two Title (Optional)</label>
            <input type="text" class="form-control" name="nextTitleTwo">
        </div>
        <div class="form-group">
            <label for="description">Recommended Two Link (Optional)</label>
            <input type="url" class="form-control" name="nextLinkTwo">
        </div>
        <div class="form-group">
            <label for="description">Recommended Three Title (Optional)</label>
            <input type="text" class="form-control" name="nextTitleThree">
        </div>
        <div class="form-group">
            <label for="description">Recommended Three Link (Optional)</label>
            <input type="url" class="form-control" name="nextLinkThree">
        </div>



        <br>
        <input type="submit" value="Add Post" class="btn btn-primary mb-4">
        <a href="/" class="btn btn-secondary mb-4">Cancel</a>
        <script>
            ClassicEditor
                .create(document.querySelector('#editor'))
                .catch(error => {
                    console.error(error);
                });
        </script>
    </form>

</div>